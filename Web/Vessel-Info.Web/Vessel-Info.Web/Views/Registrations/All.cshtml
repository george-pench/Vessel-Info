@model Vessel_Info.Web.ViewModels.Registrations.RegistrationListingViewModel

@{
    ViewData["Title"] = "All Registrations";
}

@if (this.Model.Registrations.Any())
{
    <table class="table table-hover table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr style="text-align: center;">
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registration in this.Model.Registrations)
            {
                <tr>
                    <td scope="col">
                        <a class="btn" asp-action="Details" asp-route-id="@registration.Id">@registration.Flag : @registration.RegistryPort</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div class="text-center">
        <h2 class="text-info">No registration(s)!</h2>
    </div>
}

<hr />
<partial name="_PagingPartial" model="@this.Model" />