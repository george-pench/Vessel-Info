@model Vessel_Info.Web.ViewModels.Operators.OperatorEditInputModel

@{
    ViewData["Title"] = "Edit";
}

<div class="table text-center">
    <div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div id="name-and-founded-holder" class="d-flex justify-content-between">
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <input type="text"
                           asp-for="Name"
                           class="form-control text-primary text-center"
                           id="name"
                           placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Founded" class="control-label"></label>
                    </div>
                    <input type="text"
                           asp-for="Founded"
                           class="form-control text-primary text-center"
                           id="founded"
                           placeholder="Founded..." />
                    <span asp-validation-for="Founded" class="text-danger"></span>
                </div>
            </div>

            <div id="website-holder" class="d-flex justify-content-between">
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Website" class="control-label"></label>
                    </div>
                    <input type="text"
                           asp-for="Website"
                           class="form-control text-primary text-center"
                           id="website"
                           placeholder="Website..." />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Operators" asp-action="All">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}