@model Vessel_Info.Web.ViewModels.ClassSocieties.ClassSocietyDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h2 class="text-center">Class Society Details</h2>
    <hr />

    <table class="table table-borderless table-hover">
        <tbody>
            <tr>
                <td style="width:150px">Vessel's name:</td>
                <td class="answer">@this.Model.FullName</td>
                <td>&nbsp;</td>
                <td >Abbreviation:</td>
                <td class="answer">@this.Model.Abbreviation</td>
            </tr>
            <tr>
                <td>Founded:</td>
                <td class="answer">@this.Model.Founded</td>
                <td>&nbsp;</td>
                <td>Website:</td>
                <td class="answer">@this.Model.Website</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@this.Model.Id">Edit</a>    
</div>
<br />

<div>
    <a asp-controller="ClassSocieties" asp-action="All">Back to List</a>
</div>