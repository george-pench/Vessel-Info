@model IQueryable<Vessel_Info.Web.ViewModels.ClassSocieties.ClassSocietyBaseViewModel>

@{
    ViewData["Title"] = "All Class Societies";
}

@if (Model.Any())
{
    <table class="table table-hover table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr style="text-align: center;">
                <th scope="col">Full Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classSociety in this.Model)
            {
                <tr>
                    <td scope="col">
                        <a class="btn" asp-action="Details" asp-route-id="@classSociety.Id">@classSociety.FullName</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div class="text-center">
        <h2 class="text-info">No class(es)!</h2>
    </div>
}