@model IEnumerable<Vessel_Info.Web.ViewModels.Vessels.VesselByRegistrationViewModel>

@{
    ViewData["Title"] = "";
}

@if (this.Model.Any())
{
    <table class="table table-hover table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Imo</th>
                <th>Summert Dwt</th>
                <th>Built</th>
                <th>Flag</th>
                <th>Port of Registry</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vessel in this.Model)
            {
            <tr>
                <td scope="col">
                    <p>@vessel.Name</p>
                </td>
                <td scope="col">
                    <p>@vessel.Imo</p>
                </td>
                <td scope="col">
                    <p>@vessel.SummerDwt</p>
                </td>
                <td scope="col">
                    <p>@vessel.Built</p>
                </td>
                <td scope="col">
                    <p>@vessel.VesselRegistration.Flag</p>
                </td>
                <td scope="col">
                    <p>@vessel.VesselRegistration.RegistryPort</p>
                </td>

                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@vessel.Id">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div class="text-center">
        <h2 class="text-info">No vessel(s)!</h2>
    </div>
}