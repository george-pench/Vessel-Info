                    <span asp-validation-for="Vessel.Id" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Vessel.Name" class="control-label"></label>
                    </div>

                    <input asp-for="Vessel.Name" class="form-control" />
                    <span asp-validation-for="Vessel.Name" class="text-danger"></span>
                </div>
            </div>

            <div id="imo-and-built-holder" class="d-flex justify-content-between">
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Vessel.Imo" class="control-label"></label>
                    </div>
                    <input asp-for="Vessel.Imo" class="form-control" />
                    <span asp-validation-for="Vessel.Imo" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Vessel.Built" class="control-label"></label>
                    </div>
                    <input asp-for="Vessel.Built" class="form-control" />
                    <span asp-validation-for="Vessel.Built" class="text-danger"></span>
                </div>
            </div>

            <div id="summerDwt-and-loa-holder" class="d-flex justify-content-between">
