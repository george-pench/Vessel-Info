                    <div class="d-flex justify-content-center">
                        <label asp-for="Vessel.SummerDwt" class="control-label"></label>
                    </div>
                    <input asp-for="Vessel.SummerDwt" class="form-control" />
                    <span asp-validation-for="Vessel.SummerDwt" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-50">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Vessel.Loa" class="control-label"></label>
                    </div>
                    <input asp-for="Vessel.Loa" class="form-control" />
                    <span asp-validation-for="Vessel.Loa" class="text-danger"></span>
